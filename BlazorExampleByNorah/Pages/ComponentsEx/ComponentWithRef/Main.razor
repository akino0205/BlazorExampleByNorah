@page "/ComponentsEx/ComponentWithRef"

<h3>Main</h3>
<button class="btn btn-primary" @onclick="ClickMainBtn">Main Button</button>
<button class="btn btn-primary" @onclick="ClickCompBtnInMain">Comp Button</button>
<h4>@message</h4>
<hr />
<Component @ref="_component"/>
@code {
    Component _component;
    private string message;
    private int count;

    public void ClickMainBtn()
    {
        message = $"Click MainBtn : {++count}";
        StateHasChanged();
    }
    protected void ClickCompBtnInMain()
    {
        _component.ClickCompBtn();
    }
}
